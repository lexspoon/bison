"abc"
EOF
run 0 'Line 1: Parsed a string: abc'

cat >input <<EOF
/* comment */
"abc"
EOF
run 0 'Line 2: Parsed a string: abc'

cat >input <<EOF
"He said, \"Is anyone out there?\""
EOF
run 0 'Line 1: Parsed a string: He said, "Is anyone out there?"'

cat >input <<EOF
/* a comment /* with */ nesting */
"abc"
EOF
run 0 'Line 2: Parsed a string: abc'

# Check the traces.
run -noerr 0 'Line 2: Parsed a string: abc' -p

cat >input <<EOF
/* an
unterminated
comment
EOF

run 1 'err: 1.1-2 COMMENT_START is never terminated'

